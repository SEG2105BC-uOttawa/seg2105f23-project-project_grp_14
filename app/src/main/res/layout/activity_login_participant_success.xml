<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Club Member!"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/searchEventBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/listView"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:onClick="searchEventBtn"
            android:text="Search Events"
            android:textAlignment="center" />

        <Button
            android:id="@+id/searchClubBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/listView"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:onClick="searchClubBtn"
            android:text="Search CLubs"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Your Events:" />

        <ListView
            android:id="@+id/listOfEnteredEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

        </ListView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>