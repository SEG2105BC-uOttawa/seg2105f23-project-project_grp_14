<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/registrationUsernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/registrationPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as Administrator"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/clubMemberButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as Club Member"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/participantButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as Participant"
        android:layout_marginTop="16dp" />

</LinearLayout>
