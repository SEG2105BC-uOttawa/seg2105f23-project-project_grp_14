<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Details:"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/EventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Event Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/eventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Event Date"
            android:inputType="text" />

        <EditText
            android:id="@+id/eventRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Biking Route"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="122dp" />

        <TextView
            android:id="@+id/registration_requirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Requirements:"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/ageRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age Range"
            android:inputType="text" />

        <EditText
            android:id="@+id/levelRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Experience Level"
            android:inputType="text" />

        <EditText
            android:id="@+id/paceRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pace"
            android:inputType="text" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="register_button_click"
            android:text="Register Event" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>