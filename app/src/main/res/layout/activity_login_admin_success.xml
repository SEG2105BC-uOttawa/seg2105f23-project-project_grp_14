<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventManagment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="eventManagmentBtnClick"
        android:text="Welcome Admin!"
        android:textSize="24sp" />

    <Button
        android:id="@+id/eventManagementBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="eventManagementBtnClick"
        android:text="Event Management" />

    <Button
        android:id="@+id/accountManagmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="accountManagementBtnClick"
        android:text="Account Management" />

</LinearLayout>